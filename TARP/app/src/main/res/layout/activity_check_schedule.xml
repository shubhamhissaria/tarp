<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.naman.tarp.CheckSchedule"
    android:label="Find Your Faculty" >

    <TextView
        android:id="@+id/Check_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Check Schedule"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Check_schedule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <Button
        android:id="@+id/date"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Select Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <ListView
        android:id="@+id/listView"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date"
        android:layout_marginTop="15dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true"
        android:text="Display"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

</RelativeLayout>

